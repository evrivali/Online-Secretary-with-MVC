@model ergasiaMVC.Models.AddStudentViewModel
@{
    ViewData["Title"] = "Add Student";
}
<h1>Add New Student for @Model.student.Department</h1>
<form method="post" action="AddNewStudent">
    <input type="text" asp-for="student.Department" value="@Model.student.Department" hidden />
    <input type="text" asp-for="secUsername" value="@Model.secUsername" hidden />
    <div class="mb-3">
        <label for="" class="form-label">Username</label>
        <input type="text" class="form-control" asp-for="student.USERS_username">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="password">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Registration Number</label>
        <input type="number" max="99999" class="form-control" asp-for="student.RegistrationNumber">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="student.Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Surname</label>
        <input type="text" class="form-control" asp-for="student.Surname">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="@Model.student.Department" disabled>
    </div>
    <button type="submit" class="btn btn-primary">Add Student!</button>
</form>
<br />
<p style="color:red">@Model.message</p>
<a type="button" style="margin-right:20px" class="btn btn-primary" asp-action="goBack" asp-route-username="@Model.secUsername">Go Back.</a>

